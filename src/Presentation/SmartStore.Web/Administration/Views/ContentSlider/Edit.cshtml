@model ContentSliderModel
@{
    ViewBag.Title = T("Admin.CMS.ContentSlider.EditContentSliderDetails").Text;
}
@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "contentslider-form" }))
{
    <div class="section-header">
        <div class="title">
            @T("Admin.CMS.ContentSlider.EditContentSliderDetails") - @Model.SliderName 
			<a href='@Url.Action("List")'>(@T("Admin.CMS.ContentSlider.BackToList"))</a>
        </div>
        <div class="options">
			@{ Html.RenderWidget("admin_button_toolbar_before"); }

            <button type="submit" name="save" value="save" class="btn btn-warning">
                <i class="fa fa-check"></i>
                <span>@T("Admin.Common.Save")</span>
            </button>
            <button type="submit" name="save" value="save-continue" class="btn btn-secondary">
                <span>@T("Admin.Common.SaveContinue")</span>
            </button>
            <button type="submit" name="manufacturer-delete" id="manufacturer-delete" class="btn btn-danger">
                <i class="far fa-trash-alt"></i>
                <span>@T("Admin.Common.Delete")</span>
            </button>

			@{ Html.RenderWidget("admin_button_toolbar_after"); }
        </div>
    </div>

    Html.RenderPartial("_CreateOrUpdate", Model);
}
@Html.DeleteConfirmation("contentslider-delete")